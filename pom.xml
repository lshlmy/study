        <jdbc.url>jdbc:mysql://192.168.4.222:3306/oauth2?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=utf8
        </jdbc.url>
        <jdbc.user>root</jdbc.user>
        <jdbc.pass>691024</jdbc.pass>
