        <!-- Mybatis -->
        <mybatis.version>3.4.0</mybatis.version>
        <mybatis-spring.version>1.3.0</mybatis-spring.version>
        <tk.mybatis.mapper>3.3.8</tk.mybatis.mapper>
        <!-- slf4j -->
        <slf4j.version>1.7.21</slf4j.version>
        <!--Log4j-->
